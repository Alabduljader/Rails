<p>
  <b>Title:</b>
  <%=h @post.title %>
</p>

<p>
  <b>Body:</b>
  <%=h @post.body %>
</p>

<p>
  <b>Date:</b>
  <%=h @post.date %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>


<h2>Comments</h2>
   <% for comment in @post.comments %>
      <%= comment.body %>
      <hr />
<% end %>

<%= form_tag :action => "comment", :id => @post %>
   <%= text_area "comment", "body" %><br />
   <%= submit_tag "Comment" %>
</form>